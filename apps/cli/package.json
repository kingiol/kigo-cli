{
  "name": "@kingiol/kigo-cli",
  "version": "0.1.2",
  "description": "AI-powered coding assistant CLI - Your intelligent pair programming companion",
  "keywords": [
    "ai",
    "cli",
    "coding-assistant",
    "anthropic",
    "claude",
    "openai",
    "gpt",
    "code-generation",
    "developer-tools"
  ],
  "homepage": "https://github.com/kingiol/kigo-cli#readme",
  "bugs": {
    "url": "https://github.com/kingiol/kigo-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingiol/kigo-cli.git",
    "directory": "apps/cli"
  },
  "license": "MIT",
  "author": "Kingiol(kingxiaokang@gmail.com)",
  "type": "module",
  "bin": {
    "kigo": "./bin/kigo.js"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "package": "pkg .",
    "test": "vitest run",
    "lint": "eslint src/**/*.ts",
    "dev": "node --loader ts-node/esm ./src/index.ts",
    "prepublishOnly": "pnpm build",
    "prepack": "pnpm build"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1"
  }
}
