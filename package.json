{
  "name": "kigo-node",
  "version": "0.1.0",
  "description": "AI coding assistant for the terminal - Node.js port of Kigo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,js,md,json}\"",
    "dev": "pnpm --filter @kingiol/kigo-cli dev"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "turbo": "^2.8.3",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "globals": "^15.14.0"
  },
  "packageManager": "pnpm@8.14.1",
  "#pnpm": {
    "overrides": {
      "undici": "^5.26.3"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
